<Window x:Class="ParentControl.Views.ChangePasswordWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ParentControl.Views"
        mc:Ignorable="d"
        Title="ChangePasswordWindow" Height="450" Width="800">
    <StackPanel>
        <Label Content="Старый пароль"></Label>
        <TextBox Name="OldPassword"></TextBox>
        <Label Content="Новый пароль"></Label>
        <TextBox Name="NewPassword"></TextBox>
        <Label Content="Подтвердите новый пароль"></Label>
        <TextBox Name="ConfirmPassword"></TextBox>
        <Button Content="Сменить пароль" Click="ChangeUserPassword"></Button>
        <Button Content="Назад к личному кабинету" Click="RedirectToSettingsWindow"></Button>
    </StackPanel>
</Window>
