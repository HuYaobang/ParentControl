<Window x:Class="ParentControl.Views.EmailConfirmationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ParentControl.Views"
        mc:Ignorable="d"
        Title="EmailConfirmationWindow" Height="450" Width="800">
    <StackPanel x:Name="loaded">
        <Label Content="Пожалуйста, введите код, высланный Вам на электронную почту."></Label>
        <TextBox Name="ConfirmationKey"></TextBox>
        <Button Content="Ok" Click="CheckConfirmationKey"></Button>
        <Button Content="Послать повторно" Click="ResendConfirmationKey"></Button>
    </StackPanel>
</Window>
